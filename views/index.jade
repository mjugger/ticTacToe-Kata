extends layout

block content
	div(layout="column" layout-align="space-around center").height-100pt
		md-card
			md-card-content
					h1= title
					p Welcome to #{title}
			table(ng-controller="t3Board").board
				tr
					td 
						md-button(ng-click="humanMove(0)",ng-class="activeClass(t3Board.board[0])").md-fab {{t3Board.board[0]}}
					td
						md-button(ng-click="humanMove(1)",ng-class="activeClass(t3Board.board[1])").md-fab  {{t3Board.board[1]}}
					td
						md-button(ng-click="humanMove(2)",ng-class="activeClass(t3Board.board[2])").md-fab  {{t3Board.board[2]}}
				tr
					td
						md-button(ng-click="humanMove(3)",ng-class="activeClass(t3Board.board[3])").md-fab  {{t3Board.board[3]}}
					td 
						md-button(ng-click="humanMove(4)",ng-class="activeClass(t3Board.board[4])").md-fab  {{t3Board.board[4]}}
					td
						md-button(ng-click="humanMove(5)",ng-class="activeClass(t3Board.board[5])").md-fab  {{t3Board.board[5]}}
				tr
					td
						md-button(ng-click="humanMove(6)",ng-class="activeClass(t3Board.board[6])").md-fab {{t3Board.board[6]}}
					td
						md-button(ng-click="humanMove(7)",ng-class="activeClass(t3Board.board[7])").md-fab  {{t3Board.board[7]}}
					td
						md-button(ng-click="humanMove(8)",ng-class="activeClass(t3Board.board[8])").md-fab  {{t3Board.board[8]}}
			md-card-content
				div(layout="row" layout-align="center center" ng-controller="btn")
					md-button(ng-class="restartGame()",ng-click="playAgain()").md-raised.reset-btn Play again?
			
			md-divider
			md-card-content(layout="row" layout-align="space-around center")
					div(layout="column" layout-align="space-around center")
						md-button.md-fab.md-mini.human-active O
						div.md-body-1 0
					md-button.md-fab wins
					div(layout="column" layout-align="space-around center")
						md-button.md-fab.md-mini.cpu-active X
						div.md-body-1 0